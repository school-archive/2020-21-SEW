{
  "name": "vuejs-boilerplate",
  "version": "0.4.1",
  "description": "Opinionated boilerplate for Vue.js web apps and Electron apps",
  "author": "F. Kasper <fkasper@modus-operandi.at>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "karma start",
    "test:e2e": "testcafe",
    "lint": "eslint '{src,tests}/**/*.{js,vue}'",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "prebuild": "rimraf dist/",
    "serve:dist": "serve -l 8080 ./dist",
    "test:unit:debug": "karma start --browsers Chrome --no-single-run"
  },
  "main": "background.js",
  "dependencies": {
    "@felixpy/logger": "^0.2.0",
    "@undecaf/vue-autofocus": "^0.4.3",
    "@undecaf/vue-hotkey": "^0.1.5",
    "@undecaf/vue-material-locales": "^0.2.1",
    "@undecaf/vue-material-vuelidate": "^0.3.1",
    "axios": "^0.21.1",
    "core-js": "^3.10.2",
    "date-fns": "^2.21.1",
    "material-icons-font": "^2.1.0",
    "typeface-roboto": "1.1.13",
    "vue": "^2.6.12",
    "vue-i18n": "^8.24.3",
    "vue-material": "^1.0.0-beta-15",
    "vue-material-modal-dialog": "^0.2.3",
    "vue-router": "^3.5.1",
    "vuelidate": "^0.7.6",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/cli": "^4.5.12",
    "@vue/cli-plugin-router": "^4.5.12",
    "@vue/cli-service": "~4.5.12",
    "@vue/test-utils": "^1.1.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "electron": "^11.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^6.2.2",
    "karma": "^6.3.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^4.0.2",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "source-map-loader": "^1.0.2",
    "testcafe": "^1.14.0",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.6",
    "vue-template-compiler": "^2.6.12"
  },
  "keywords": [
    "vue",
    "template",
    "material",
    "vuelidate",
    "vuex",
    "router",
    "axios",
    "electron"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/undecaf/vue-boilerplate"
  }
}
